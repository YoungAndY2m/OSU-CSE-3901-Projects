<% content_for :title, "Instructor Sign Up" %>

<h2 class="text-center">Instructor Sign Up</h2>
<hr>

<div class="row">

  <div class="col-md-6 offset-3">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!--
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %> characters minimum)
          <% end %>
        </label>
      </div>
      -->

      <div class="field">
        <div class="mb-3 row">
          <%= f.label :email, class: 'col-sm-2 col-form-label' %>

          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
        </div>         
      </div>
     

      <div class="field">
          <div class="mb-3 row">
            <%= f.label :password, class: 'col-sm-2 col-form-label' %>

            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
              <div class="row text-center">
                <% if @minimum_password_length %>
                <small>(<%= @minimum_password_length %> characters minimum)</small>
                <% end %>
              </div>
            </div>

          </div>
      </div>

      <div class="field">
        <div class="mb-3 row">
          <%= f.label :password_confirmation, class: 'col-sm-2 col-form-label' %>

          <div class="col-sm-10">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="actions text-center">
        <%= f.submit "Sign up", class: " mt-2 btn btn-primary btn-lg" %>
      </div>
    <% end %>
  <br>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>


  </div>
</div>