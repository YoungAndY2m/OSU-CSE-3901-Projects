<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    <!-- Set page title as defined per page, otherwise use default page title -->
    <% if content_for?(:title) %>
      <title><%= yield(:title) %></title>
    <% else %>
      <title>3901 - Peer Evaluation</title>
    <% end %>
    <script src="javascript/form.js" type= "script" crossorigin="anonymous" defer></script>

  </head>
  <body>

    <!-- Optional JavaScript; choose one of the two! -->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <%= render "layouts/navbar" %>
    <% if instructor_signed_in? %>
      <%= render "layouts/instructor_navbar" %>
    <% end %>
    <% if logged_in? %>
      <%= render "layouts/student_navbar"%>
    <% end %>
    <%= render "layouts/alerts" %>
    <%= yield %>
  </body>
</html>