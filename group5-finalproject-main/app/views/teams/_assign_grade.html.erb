      </div>
    </div>  
  </div>
  <div class="field">
    <div class="mb-3 row">
      <%= form.label :comment  , class: 'col-sm-2 col-form-label' %>
      <div class="col-sm-10">
        <%= form.text_field :comment , class: 'form-control', placeholder: 'Please enter comment' %>
      </div>
    </div>  
  </div>
 
  <div class="actions text-center">
    <%= form.submit"Save Grade", class:"btn btn-primary" %>
  </div>
<% end %>
